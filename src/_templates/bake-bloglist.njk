{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}
  {{ headline }}
{% endblock %}

{% block page_description %}
  {{ headline }} by Athena Hawkins 
{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <h1 class="headline">{{ headline }}</h1>
      <p class="subtitle">{{ date }}</p>
      <div class="col-sm-4">
        <img src="../img/headshot.jpg" alt="image" class="img-thumbnail small-headshot">
        <p class="byline">By Athena Hawkins<br>
          <span>Formula1 Females</span>
        </p>
        <hr class="d-sm-none">
      </div>
      <div class="col-sm-8">
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}