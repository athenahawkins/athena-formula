{% extends '_templates/base.njk' %}

{% block page_title %}Circuits{% endblock %}

{% block page_description %}A list of pirate ships of lore from fact and fiction.{% endblock %}

{% block content %}
  <article class="container">
        <h1>Explore the Circuits</h1>
        <p>It's lights out and away we go!</p>
        <div class="row">
          {% for circuit in circuits.tracks %}
            <div class="col-lg-3 col-md-6 col-sm-6 col-12 mb-3 mb-sm-0">
              <div class="card-deck">
              <a href="circuits/{{ circuit.slug }}.html" class="card-link">
                <div class="card">
                  <img class="card-img-top" src="img/{{ circuit.img }}" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title">
                      {{ circuit.circuit_name }}
                    </h5>
                  </div>
                </div>
              </a>
              </div>
            </div>
          {% endfor %}
        </div>
  </article>
{% endblock %}