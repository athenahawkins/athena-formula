{% extends '_templates/base.njk' %}

{% block page_title %}Home{% endblock %}

{% block page_description %}Home page with news and blogs.{% endblock %}

{% block content %}
<div class="container">
  <h1>Welcome to the Grid</h1>
  <p>Strap in for the latest Formula1 standings and blogs that'll have you navigating the twists and turns of every circuit faster than Max Verstappen! Dive into the thrilling world of Formula 1 by exploring our drivers, constructors, and circuits pages. </p>
  <h2>Newest News</h2>
  <p>Stay on track!</p>
  <div class="row">
    {% for blog in headblogs.blogs %}
      <div class="col-lg-4 col-md-4 col-sm-6">
        <img src="img/{{ blog.slug }}.jpg" alt="" class="img-fluid">
        <h3><a href="headblogs/{{ blog.slug }}.html">{{ blog.headline }}</a></h3>
      </div>
    {% endfor %}
  </div>
  <h2>Blogs</h2>
  <p>Real-time updates and race commentary.</p>
  <hr>
  {% for blog in bloglist.blogs %}
    <h3><a href="bloglist/{{ blog.slug }}.html" target="_blank">{{ blog.headline }}</a></h3>
    <p>{{ blog.date }}</p>
    <hr>
  {% endfor %}
</div>
{% endblock %}